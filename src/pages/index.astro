---
import { HeroSection } from '@/components/index.ts';
import { devName, heroDescription } from '@/helpers/data.ts';
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import profilePic from '../assets/images/profile.jpg';
---

<Layout>
  <HeroSection
    devName={devName}
    heroDescription={heroDescription}
  >
    <Image
      src={profilePic}
      alt={devName}
      width={300}
      height={300}
      class='rounded-full'
      loading='eager'
    />
  </HeroSection>
</Layout>
