---
import { Card, CardHeader, CardTitle } from '@/components/ui/card';
import { weatherData } from '@/stores/index.ts';
import { Image } from 'astro:assets';

console.log('weatherData.get() :>> ', weatherData.get());
const { condition, icon } = weatherData.get() ?? { condition: '', icon: '' };
---

<!-- TODO: show more info -->
<Card
  className='w-full max-w-sm mx-auto'
  title={weatherData.get()?.condition}
>
  <CardHeader>
    <CardTitle className='flex justify-between items-center relative'>
      <span>Clima Atual</span>
      {
        icon && (
          <Image
            class='w-20 h-20 absolute top-0 right-0'
            src={icon!}
            width={80}
            height={80}
            alt={condition ?? 'Weather icon'}
            loading='lazy'
          />
        )
      }
    </CardTitle>
  </CardHeader>
</Card>
